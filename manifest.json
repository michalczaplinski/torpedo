{
  "name": "Torpedo",
  "version": "0.0.1",
  "description": "I work at the guardian",
  "icons": { "32": "favicon32.ico",
           "48": "favicon48.ico",
          "64": "favicon64.ico" },

  "permissions": [
    "chrome://favicon/",
    "sessions",
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": ["guardian.js"]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
}],
  "browser_action": {
      "default_title": "Torpedo"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "manifest_version": 2
}
